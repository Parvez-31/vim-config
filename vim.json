{
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.smartcase": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.leader": " ",

  "vim.handleKeys": {
    "<C-b>": false,
    "<C-a>": false,
    "<C-f>": false,
    "<C-c>": false,
    "<C-h>": false,
    "<C-w>": false
  }
}
